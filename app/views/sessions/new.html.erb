<h1>Log in</h1>

<% if flash[:error]%>
<%= flash[:error] %>
<% end %>

<%= form_for (:user) do |f|%>
<%= f.label :username%>
<%= f.text_field :username %> <br>

<%= f.label :password %>
<%= f.password_field :password %> <br>

<%= f.submit "Log in" %>
<% end %>

